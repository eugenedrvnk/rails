<%= @user.email %>

<p id=”alert”><%= alert %></p>
<h1>Login</h1>
<%= form_with(model: @user, local: true, url: login_path) do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div class="actions">
    <%= form.submit "Login" %>
  </div>
  
<% end %>

