
<%= form_with(model: user, local: true, url: @link, class: 'pure-form') do |form| %>

  <div class="field">
    <%= form.label :name, 'Имя' %>
    <%= form.text_field :name, maxlength: 15 %>
  </div>

  <% if user.errors.include?(:name) %>
    <div class="error_text">
      Обязательный пункт*
    </div>
  <% end %>

  <div class="field">
    <%= form.label :surname, 'Фамилия' %>
    <%= form.text_field :surname, maxlength: 15 %>
  </div>

  <% if user.errors.include?(:surname) %>
    <div class="error_text">
      Обязательный пункт*
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email, 'E-mail' %>
    <%= form.text_field :email %>
  </div>

  <% if user.errors.include?(:email) %>
    <div class="error_text">
      Формат почты невереный
    </div>
  <% end %>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, minlength: 6 %>
  </div>

  <% if user.errors.include?(:password) %>
    <div class="error_text">
      Пароли должны совпадать, быть длинее 6 символов, содержать цифры, прописные и заглавные буквы
    </div>
  <% end %>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, minlength: 6 %>
  </div>

  <% if user.errors.include?(:password_confirmation) %>
    <div class="error_text">
      Пароли должны совпадать и быть длинее 6 символов, содержать цифры, прописные и заглавные буквы
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit class: 'pure-button pure-button-primary submit_form' %>
  </div>
<% end %>


